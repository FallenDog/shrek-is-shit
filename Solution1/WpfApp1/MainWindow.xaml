<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  


        <ListBox Name="games" Grid.ColumnSpan="2">
            <ListBoxItem>
                <StackPanel>
                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding Developer}" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding General}" HorizontalAlignment="Center"></TextBlock>

                </StackPanel>
            </ListBoxItem>
         
            

        </ListBox>


 
</Window>
